{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/participants", "dest": "/api/index.js" },
    { "src": "/api/health", "dest": "/api/index.js" },
    { "src": "/admin", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
} 